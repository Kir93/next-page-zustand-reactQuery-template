{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@APIs": ["APIs"],
      "@utils": ["utils"],
      "@configs": ["configs"],
      "@styles": ["styles"],
      "@public": ["public"],
      "@store": ["store"],
      "@atoms": ["atoms"],
      "@components": ["components"],
      "@APIs/*": ["APIs/*"],
      "@utils/*": ["utils/*"],
      "@configs/*": ["configs/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@store/*": ["store/*"],
      "@atoms/*": ["atoms/*"],
      "@components/*": ["components/*"]
    },
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
