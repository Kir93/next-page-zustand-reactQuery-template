{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@APIs": ["APIs"],
      "@utils": ["utils"],
      "@configs": ["configs"],
      "@styles": ["styles"],
      "@public": ["public"],
      "@reducers": ["reducers"],
      "@atoms": ["atoms"],
      "@components": ["components"],
      "@APIs/*": ["APIs/*"],
      "@utils/*": ["utils/*"],
      "@configs/*": ["configs/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@reducers/*": ["reducers/*"],
      "@atoms/*": ["atoms/*"],
      "@components/*": ["components/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "next.config.js", "sitemap.config.js"]
}
